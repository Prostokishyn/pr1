class Program
{
    static void Main()
    {
        int[] numbers = new int[10];
        int smallestPositive = int.MaxValue; // Ініціалізуємо змінну найменшого додатнього числа значенням "необмежено великим числом"

        for (int i = 0; i < 10; i++)
        {
            Console.Write("Введіть число {0}: ", i + 1);
            if (int.TryParse(Console.ReadLine(), out numbers[i]))
            {
                if (numbers[i] > 0 && numbers[i] < smallestPositive)
                {
                    smallestPositive = numbers[i];
                }
            }
            else
            {
                Console.WriteLine("Неправильний формат числа. Спробуйте ще раз.");
                i--; 
            }
        }

        if (smallestPositive == int.MaxValue)
        {
            Console.WriteLine("У списку немає додатніх чисел.");
        }
        else
        {
            Console.WriteLine("Найменше додатнє число у списку: " + smallestPositive);
        }
    }
}
